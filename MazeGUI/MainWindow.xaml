<Window x:Class="MazeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="100" Margin="0" VerticalAlignment="Center" Width="100">
            <Button x:Name="singlePlayerButton" Content="Single Player" HorizontalAlignment="Center" Margin="12,0,12,15" VerticalAlignment="Center" Height="20" Width="76" Click="SinglePlayerButton_Click">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button x:Name="MultiPlayerButton" Content="Multi Player" HorizontalAlignment="Center" Margin="0,0,0,15" VerticalAlignment="Center" Width="75"/>
            <Button x:Name="settingsButton" Content="Settings" HorizontalAlignment="Center" Margin="0,0,0,15" VerticalAlignment="Center" Width="75" Click="SettingsButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
