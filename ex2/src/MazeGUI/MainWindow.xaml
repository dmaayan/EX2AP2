<Window x:Class="MazeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/menu_blu.png"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" Height="112" Margin="0,60,15,0" VerticalAlignment="Top" Width="156">
            <Button x:Name="singlePlayerButton" Content="Single Player" HorizontalAlignment="Center" Margin="10,0,0,15" VerticalAlignment="Center" Height="27" Width="106" Click="SinglePlayerButton_Click"/>
            <Button x:Name="MultiPlayerButton" Content="Multi Player" HorizontalAlignment="Center" Margin="10,0,0,15" VerticalAlignment="Center" Width="105" Click="MultiPlayerButton_Click" Height="28"/>
            <Button x:Name="settingsButton" Content="Settings" HorizontalAlignment="Center" Margin="10,0,0,0" VerticalAlignment="Center" Width="105" Click="SettingsButton_Click" Height="27"/>
        </StackPanel>

    </Grid>
</Window>
