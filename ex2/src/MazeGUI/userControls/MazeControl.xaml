<UserControl x:Class="MazeGUI.userControls.MazeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeGUI.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">
    <Viewbox Loaded="MazeControl_Loaded" >
        <Border x:Name="canvasBorder" BorderBrush="Black">
            <Canvas x:Name="mazeCanvas" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black">
                <Rectangle x:Name="player" Panel.ZIndex="2">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/MazeGUI;component/Images/player.png" Stretch="Uniform"/>
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>
        </Border>
    </Viewbox>
</UserControl>
